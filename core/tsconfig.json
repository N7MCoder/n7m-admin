{
  "compilerOptions": {
    // 严格检查
    "strict": true,
    // 模块解析策略
    "moduleResolution": "node",
    // 不指定的类型默认为any
    "noImplicitAny": false,
    // 基本目录
    "baseUrl": ".",
    // 生成 Map 文件
    "sourceMap": true,
    // 编译目标
    "target": "ESNext",
    // 模板标准
    "module": "ESNext",
    // 检查未使用变量
    "noUnusedLocals": true,
    // 检查未使用参数
    "noUnusedParameters": true,
    // 跳过声明文件类型检查
    "skipLibCheck": true,
    // 文件名和模块名保持一致
    "forceConsistentCasingInFileNames": true,
    // 允许编译JS
    "allowJs": true,
    // 允许JS文件中报错
    "checkJs": true,
    // 允许导入JSON模块
    "resolveJsonModule": true,
    // 启用实验性的装饰器特性
    "experimentalDecorators": true,
    // 导入内容创建命名空间，CommonJS和ES模块之间的互操作
    "esModuleInterop": true,
    // 允许从没有默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,
    // 路径映射
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // TS 引入的库
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "src/types/**/*.d.ts",
    "src/env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ],
  // 继承配置文件
  "extends": "@vue/tsconfig/tsconfig.web.json"
}